<odoo>
    <record id="view_partnerform" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">


            <xpath expr="//field[@name='street']" position="after">
                <field name="street1_arbi" placeholder="Street 1 Arabic..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
            </xpath>
             <xpath expr="//field[@name='street2']" position="after">
                <field name="street2_arbi" placeholder="Street 2 Arabic..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
             </xpath>

            <xpath expr="//field[@name='function']" position="before">
                <field name="jobcard_no" palce_holder="JobCard No"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="customer_arabic_name" placeholder="Arabic Name"/>
                <field name="customer_code" placeholder="Customer Code"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="arbiinfo" string="معلومات عربية">
                    <group name="studio_N4yL">
                        <group name="studiL_left">
                            <field name="agency_name_arbi" string="اسم الوكالة"/>
                            <field name="claim_no_arbi" string="رقم ة المطالب"/>
                            <field name="service_advisor_arbi" string="اسم المشر ف "/>
                            <field name="jobcard_no_arbi" string="رقم ت كر ل عم ة الوكال"/>
                            <field name="plate_no_arbi" string="رقم ة اللوح "/>
                            <field name="car_type_arbi" string="نوع ة السيار "/>
                            <field name="chasis_no_arbi" string="رقم ة الشاصي "/>
                            <field name="odoo_meter_arbi" string="قراءة د العدا"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
